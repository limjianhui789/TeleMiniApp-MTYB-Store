# ============================================================================
# MTYB Shop - Production Environment Configuration
# ============================================================================
# DO NOT commit this file to version control

# Application Configuration
VITE_APP_NAME=MTYB Shop
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_BASE_URL=https://api.mtyb-shop.com
VITE_API_TIMEOUT=30000

# Payment Gateway Configuration
VITE_CURLEC_BASE_URL=https://api.curlec.com
VITE_CURLEC_PUBLIC_KEY=PRODUCTION_PUBLIC_KEY_HERE
VITE_CURLEC_WEBHOOK_SECRET=PRODUCTION_WEBHOOK_SECRET_HERE

# Telegram Configuration
VITE_TELEGRAM_BOT_TOKEN=PRODUCTION_BOT_TOKEN_HERE
VITE_TELEGRAM_WEBHOOK_URL=https://api.mtyb-shop.com/webhooks/telegram

# Feature Flags
VITE_ENABLE_PLUGIN_SANDBOX=false
VITE_ENABLE_ORDER_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MOCK_PAYMENTS=false

# Storage Configuration
VITE_STORAGE_PREFIX=mtyb_prod_

# Security Configuration
VITE_ENCRYPTION_KEY=PRODUCTION_ENCRYPTION_KEY_32_CHARS
VITE_JWT_SECRET=PRODUCTION_JWT_SECRET_64_CHARS_MIN

# Monitoring and Logging
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_LOG_LEVEL=error

# Performance
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG_MODE=false