# ============================================================================
# MTYB Virtual Goods Platform - Environment Variables Example
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Configuration
# ============================================================================
VITE_APP_NAME=MTYB Virtual Goods Platform
VITE_APP_VERSION=1.0.0

# ============================================================================
# API Configuration
# ============================================================================
VITE_API_BASE_URL=https://api.mtyb.shop
VITE_API_TIMEOUT=30000

# ============================================================================
# Payment Gateway Configuration (Curlec)
# ============================================================================
VITE_CURLEC_BASE_URL=https://api.curlec.com
VITE_CURLEC_PUBLIC_KEY=your_curlec_public_key_here
VITE_CURLEC_WEBHOOK_SECRET=your_curlec_webhook_secret_here

# ============================================================================
# Telegram Configuration
# ============================================================================
VITE_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
VITE_TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram

# ============================================================================
# Feature Flags
# ============================================================================
VITE_ENABLE_PLUGIN_SANDBOX=true
VITE_ENABLE_ORDER_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MOCK_PAYMENTS=true

# ============================================================================
# Storage Configuration
# ============================================================================
VITE_STORAGE_PREFIX=mtyb_

# ============================================================================
# Security Configuration
# ============================================================================
# IMPORTANT: Change these in production!
VITE_ENCRYPTION_KEY=your_encryption_key_here_change_in_production
VITE_JWT_SECRET=your_jwt_secret_here_change_in_production

# ============================================================================
# Monitoring and Logging
# ============================================================================
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_LOG_LEVEL=info

# ============================================================================
# Development Configuration
# ============================================================================
# These are only used in development mode
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost